
CORE_INCS="$UNIX_INCS"
CORE_DEPS="$UNIX_DEPS $FREEBSD_DEPS"
CORE_SRCS="$UNIX_SRCS $FREEBSD_SRCS"


# __FreeBSD_version is the best way to learn when
# some capability appeared or became safe to use

version=`grep "#define __FreeBSD_version" /usr/include/osreldate.h \
         | sed -e 's/^.* \(.*\)$/\1/'`


# sendfile

if [ $version -gt 300007 ]; then
    have=HAVE_SENDFILE . auto/have
    CORE_SRCS="$CORE_SRCS $FREEBSD_SENDFILE_SRCS"
fi


# kqueue

if [ \( $version -lt 500000 -a $version -ge 410000 \) \
     -o $version -ge 500011 ]
then
    have=HAVE_KQUEUE . auto/have
    have=HAVE_CLEAR_EVENT . auto/have
    CORE_SRCS="$CORE_SRCS $KQUEUE_SRCS"
    EVENT_MODULES="$EVENT_MODULES $KQUEUE_MODULE"
    EVENT_FOUND=YES
fi


# kqueue's NOTE_LAWAT

if [ \( $version -lt 500000 -a $version -ge 430000 \) \
     -o $version -ge 500018 ]
then
    have=HAVE_LOWAT_EVENT . auto/have
fi


if [ $EVENT_AIO = YES ]; then
    CORE_SRCS="$CORE_SRCS $AIO_SRCS"
    EVENT_MODULES="$EVENT_MODULES $AIO_MODULE"
fi
